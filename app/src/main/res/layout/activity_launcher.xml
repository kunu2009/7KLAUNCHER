<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Home Screen -->
    <FrameLayout
        android:id="@+id/homeScreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent">

        <!-- Time/Date at top -->
        <TextClock
            android:id="@+id/timeClock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_horizontal"
            android:format12Hour="EEE, dd MMM  h:mm a"
            android:format24Hour="EEE, dd MMM  HH:mm"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            android:paddingTop="@dimen/space_l"
            android:paddingBottom="@dimen/space_s"
            android:elevation="6dp"/>

        <!-- Multipage Home via ViewPager2 -->
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/homePager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:clipToPadding="false"
            android:paddingStart="@dimen/inset_horizontal"
            android:paddingEnd="@dimen/inset_right_home"
            android:paddingTop="@dimen/inset_top"
            android:paddingBottom="@dimen/inset_bottom"/>

        <!-- Widgets Container -->
        <FrameLayout
            android:id="@+id/widgetsContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/sidebar_padding_bottom"
            android:paddingEnd="@dimen/sidebar_width" />

        <!-- Dock as RecyclerView (horizontal) -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/dock"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dock_height"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@drawable/glass_panel"
            android:paddingVertical="@dimen/space_m"
            android:paddingStart="@dimen/inset_horizontal"
            android:layout_marginEnd="@dimen/sidebar_width"
            android:clipToPadding="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Sidebar as RecyclerView (vertical) -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/sidebar"
            android:layout_width="@dimen/sidebar_width"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:background="@drawable/glass_panel"
            android:paddingTop="@dimen/sidebar_padding_top"
            android:paddingBottom="@dimen/sidebar_padding_bottom"
            android:clipToPadding="false"/>

        <!-- Edge handle to detect swipe-in gestures -->
        <View
            android:id="@+id/sidebarEdgeHandle"
            android:layout_width="@dimen/edge_handle_width"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:background="@android:color/transparent"/>

        <!-- Removed overlay FABs to avoid covering apps; adding via long-press in app drawer instead -->

    </FrameLayout>

    <!-- Scrim overlay for sidebar when expanded via swipe; placed below drawer -->
    <View
        android:id="@+id/sidebarScrim"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/transparent_black"
        android:visibility="gone"
        android:alpha="0"/>

    <!-- App Drawer -->
    <FrameLayout
        android:id="@+id/appDrawerContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent_black"
        android:visibility="gone">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/appDrawerPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingTop="@dimen/inset_top"
            android:paddingBottom="@dimen/inset_bottom"
            android:paddingStart="@dimen/inset_horizontal"
            android:paddingEnd="@dimen/inset_right_home" />

        <!-- Search box must be after the RecyclerView to render on top in FrameLayout -->
        <EditText
            android:id="@+id/searchBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:hint="Search apps"
            android:padding="@dimen/space_m"
            android:background="@drawable/glass_panel"
            android:textColor="@android:color/white"
            android:textColorHint="@color/semi_transparent_white"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:clickable="true"
            android:enabled="true"
            android:inputType="text"
            android:imeOptions="actionSearch|flagNoFullscreen|flagNoExtractUi"
            android:maxLines="1"
            android:singleLine="true"
            android:elevation="8dp"
            android:layout_margin="@dimen/space_m" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/editSectionsFab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="@dimen/space_l"
            android:layout_marginBottom="@dimen/inset_bottom"
            android:contentDescription="Edit Sections"
            app:srcCompat="@android:drawable/ic_input_add"
            app:tint="@android:color/white" />

        <Button
            android:id="@+id/closeDrawer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="@dimen/space_xl"
            android:background="@drawable/round_button"
            android:padding="12dp"
            android:text="Close"
            android:textColor="@android:color/white"
            android:onClick="onCloseDrawerClick"/>

        <!-- Selection mode action bar (shown only in selection mode) -->
        <LinearLayout
            android:id="@+id/selectionBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:gravity="end|center_vertical"
            android:padding="@dimen/space_m"
            android:background="@drawable/glass_panel"
            android:visibility="gone">
            <Button
                android:id="@+id/cancelSelection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"/>
            <Space
                android:layout_width="@dimen/space_m"
                android:layout_height="0dp"/>
            <Button
                android:id="@+id/saveSelection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"/>
        </LinearLayout>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
